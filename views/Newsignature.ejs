<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>SIGNATURE RECOGNITION & VERIFICATION SYSTEM</title>

    <!-- Bootstrap core CSS -->
    <link href="bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <!-- <link href="css/blog-home.css" rel="stylesheet"> -->
  </head>

  <body>
    <%- include("partials/nav") %>

    <!-- Page Content -->
    <div class="container">
      <br /><br />
      <!-- /.row -->
      <div class="row">
        <div class="col-md-12">
          <form
            id="newSignature"
            action="/register"
            method="post"
            enctype="multipart/form-data"
          >
            <!-- Search Widget -->
            <div class="card my-12">
              <h5 class="card-header"><center>New Signature</center></h5>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="firstname">First name</label><br />
                      <input
                        id="firstname"
                        type="text"
                        name="firstname"
                        class="form-control"
                        placeholder="Enter your Firstname"
                        value="<%= firstname %>" required
                      />
                    </div>
                    <div class="form-group">
                      <label for="lastname">Last name</label><br />
                      <input
                        id="lastname"
                        type="text"
                        name="lastname"
                        class="form-control"
                        placeholder="Enter your lastname"
                        value="<%= lastname%>" required
                      />
                    </div>
                    <div class="form-group">
                      <label for="phonenumber">Phonenumber</label><br />
                      <input
                        id="phonenumber"
                        type="tel"
                        name="phonenumber"
                        class="form-control"
                        placeholder="Enter your Phonenumber"
                        value="<%= phonenumber %>" required
                      />
                    </div>
                    <div class="form-group">
                      <label for="email">Email Address</label><br />
                      <input
                      id="email"
                        type="email"
                        name="email"
                        class="form-control"
                        placeholder="Enter your Email Address"
                        value="<%= email %>" required
                      />
                      <% if(emailError.length !== 0){ %>
                      <div class="alert alert-danger" role="alert">
                        <%= emailError %>
                      </div>
                      <% } %> 
                    </div>
                    <div class="form-group">
                      <label for="address">Address</label><br />
                      <textarea
                      id="address"
                        class="form-control"
                        name="address"
                        placeholder="Address"
                        required
                      ><%= address %></textarea>
                    </div>
                    <div class="form-group">
                      <label for="signature">Your signature</label><br />
                      <input
                        type="password"
                        name="signature"
                        class="form-control"
                        placeholder="Enter your signature"
                        id="signature" required
                      />
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <input type="file" name="file" id="file" required /><br />
                      <label for="file" style="margin-top: 25px">Document to Upload</label
                      ><br />
                      <img
                        src="file.svg"
                        id="photoImage"
                        name="photoImage"
                        class="img-fluid"
                        width="200"
                        style="margin-top: 30px"
                      />
                    </div>
                  </div>
                </div>
                <% if (success.length !== 0){ %> 
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
                <% } %> 
                <div class="form-group">
                  <button
                    class="btn btn-primary form-control text-center"
                    type="submit"
                    style="margin-top: 30px"
                  >
                    Submit Document
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- /.container -->
    <style>
      .filme {
        opacity: 0;
      }
    </style>
    <br /><br />

    
    <%- include("partials/footer") %> 

    <!-- Bootstrap core JavaScript -->
    <!-- <script src="vendor/jquery/jquery.min.js"></script> -->
    <script src="bootstrap.bundle.min.js"></script>
  </body>
</html>
